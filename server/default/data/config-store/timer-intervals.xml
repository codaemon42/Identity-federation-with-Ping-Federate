<?xml version="1.0" encoding="UTF-8"?>
<c:config xmlns:c="http://www.sourceid.org/2004/05/config">
    <!-- The interval, in milliseconds, that PingFederate checks the server/default/data/drop-in-deployer directory for
         a new data.zip file to import. The default is 5000. -->
    <c:item name="ConfigArchiveDeployTimerInterval">5000</c:item>

    <!-- The interval, in milliseconds, that PingFederate checks the server/default/data/connection-deployer directory
         for a new connection file to import. The default is 5000. -->
    <c:item name="ConnectionImportTimerInterval">5000</c:item>

    <!-- The interval, in milliseconds, that the administrative console runs a background task to remove
         expired access grants. The default is 86400000 (1 day). Set this value to 0 to disable the background
         task. -->
    <c:item name="AccessGrantCleanerInterval">86400000</c:item>

    <!-- The interval, in milliseconds, that the administrative console runs a background task to remove
         expired persistent authentication sessions. The default is 86400000 (1 day). Set this value to 0 to disable
         the background task. -->
    <c:item name="StoredSessionCleanerInterval">86400000</c:item>

    <!-- The interval, in milliseconds, that PingFederate runs a background task that checks for certificates that are
         expiring soon, and sends notification emails to administrators. The default is 43200000 (12 hours). -->
    <c:item name="CertExpirationNotifierTimerInterval">43200000</c:item>
</c:config>