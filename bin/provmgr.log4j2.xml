<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <RollingFile name="FILE" fileName="${sys:pf.home}/log/provmgr.log"
            filePattern="${sys:pf.home}/log/provmgr.log.%i">
            <PatternLayout>
                <pattern>%p %t %c - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="100 KB" />
            </Policies>
            <DefaultRolloverStrategy max="1" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="FILE" />
        </Root>
    </Loggers>
</Configuration>